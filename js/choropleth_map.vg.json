{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"title": {
		"text": "Life Expectancy for countries (Year 2019)",
		"fontSize": 18
	},
	"width": 800,
	"height": 500,
	"data": {
		"url": "js/ne_110m.topojson",
		"format": {
			"type": "topojson",
			"feature": "ne_110m_admin_0_countries"
		}
	},
	"projection": {
		"type": "equalEarth"
	},
	"layer": [
		{
			"transform": [
				{
					"calculate": "'Data is not available in ' + datum.properties.NAME",
					"as": "note"
				}
			],
			"mark": {
				"type": "geoshape",
				"fill": "lightgray",
				"stroke": "white"
			},
			"encoding": {
				"tooltip": {
					"field": "note"
				}
			}
		},
		{
			"transform": [
				{
					"lookup": "properties.NAME",
					"from": {
						"data": {
							"url": "https://raw.githubusercontent.com/yidec/FIT3179_HW9/main/data/Human_life_Expectancy.csv"
						},
						"key": "Country",
						"fields": [
							"Life_exp"
						]
					}
				}
			],
			"mark": {
				"type": "geoshape"
			},
			"encoding": {
				"color": {
					"field": "Life_exp",
					"type": "quantitative",
					"scale": {
						"type": "linear"
					},
					"legend": {
						"title": "Life Expectancy(Age)",
						"titleFontSize": 13
					}
				},
				"tooltip": [
					{
						"field": "properties.NAME",
						"type": "nominal",
						"title": "Country"
					},
					{
						"field": "Life_exp",
						"type": "quantitative",
						"title": "Life Expectancy (Year)"
					}
				]
			}
		}
	]
}