{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "https://worldhappiness.report/ed/2020/#appendices-and-data",
  "title": {
    "fontSize": 22,
    "text": "World Happiness Score",
    "font": "concord"
  },
  "height": 280,
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/yidec/FIT3179_Project_2/main/data/Compliled_Life_Expectancy_no_null.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "Country",
        "oneOf": [
        "United States of America",
        "Switzerland",
        "Norway",
        "Iceland",
        "Luxembourg"
      ]
      }
    },
    {"filter": {"field": "Year", "oneOf": [1990, 2019]}}
  ],
  "encoding": {
    "x": {
      "field": "Life_Exp",
      "type": "quantitative",
      "title": "Life Expectancy (years)",
      "scale": {"domain": [50, 100]},
      "axis": {"titleFontSize": 14, "labelFontSize": 12}
    },
    "y": {
      "field": "Country",
      "type": "nominal",
      "title": "Countries",
      "sort": [
        "United States of America",
        "Switzerland",
        "Norway",
        "Iceland",
        "Luxembourg"
      ],
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false,
        "titleFontSize": 14,
        "labelFontSize": 12
      }
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {"field": "Country", "type": "nominal"},
        "color": {"value": "#9FC9F3"}
      }
    },
    {
      "mark": {"type": "point", "filled": true},
      "encoding": {
        "color": {
          "field": "Year",
          "type": "ordinal",
          "scale": {"domain": [1990, 2019], "range": ["#F07DEA", "#A460ED"]},
          "title": "Year",
          "legend": {"labelFontSize": 12, "titleFontSize": 14}
        },
        "tooltip": [
          {
            "field": "Life_Exp",
            "type": "quantitative",
            "title": "Life Expectancy (Age)"
          }
        ],
        "size": {"value": 100},
        "opacity": {"value": 1}
      }
    }
  ],
  "config": {}
}