{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Life Expectancy for countries (1990 - 2019)",
  "width": "container",
  "height": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/yidec/FIT3179_Project_2/main/data/Compliled_Life_Expectancy_no_null.csv"
  },
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2019,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "lookup": "Country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/yidec/FIT3179_Project_2/main/js/ne_110m.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "key": "properties.NAME"
      },
      "as": "geo"
    },
    {"filter": "datum.Year == year_selection"}
  ],
  "mark": {"type": "geoshape", "stroke": "white"},
  "encoding": {
    "shape": {"field": "geo", "type": "geojson"},
    "color": {
      "field": "Life_Exp",
      "type": "quantitative",
      "scale": {"type": "linear"},
      "legend": {"format": ".2s", "title": "Life Expectancy(Age)"}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {
        "field": "Happiness_Score",
        "type": "quantitative",
        "title": "Happiness Score"
      }
    ]
  },
  "config": {}
}